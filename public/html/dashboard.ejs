<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login - Growtopia</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: transparent;
    }

    .glass {
      backdrop-filter: blur(20px);
      background-color: rgba(255, 255, 255, 0.06);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
    }

    .floating-label input:focus ~ label,
    .floating-label input:not(:placeholder-shown) ~ label {
      transform: translateY(-1.5rem) scale(0.85);
      color: #0ea5e9;
    }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen">

  <div class="glass p-6 md:p-8 rounded-2xl w-[90%] max-w-md animate-fade-in">
    <h2 class="text-2xl font-semibold text-white text-center mb-6 tracking-wide">Secure Login</h2>

    <% if (typeof error !== 'undefined') { %>
      <div class="bg-red-100 text-red-700 p-3 text-sm rounded mb-4 font-medium">
        <%= error %>
      </div>
    <% } %>

    <form 
      method="POST" 
      action="/player/growid/login/validate" 
      id="loginForm" 
      accept-charset="UTF-8" 
      autocomplete="off">

      <input type="hidden" name="type" value="log">
      <input type="hidden" name="_token" value="<%= JSON.stringify(data) %>" />

      <div class="floating-label relative mb-6">
        <input type="text" id="growId" name="growId" placeholder=" " 
               class="w-full px-4 pt-6 pb-2 bg-transparent border border-white/30 rounded-md text-white placeholder-transparent focus:outline-none focus:ring-2 focus:ring-cyan-400"/>
        <label for="growId" class="absolute left-4 top-2 text-sm text-gray-300 transition-all">GrowID</label>
      </div>

      <div class="floating-label relative mb-6">
        <input type="password" id="password" name="password" placeholder=" " 
               class="w-full px-4 pt-6 pb-2 bg-transparent border border-white/30 rounded-md text-white placeholder-transparent focus:outline-none focus:ring-2 focus:ring-cyan-400"/>
        <label for="password" class="absolute left-4 top-2 text-sm text-gray-300 transition-all">Password</label>
        <button type="button" onclick="togglePassword()" 
                class="absolute right-4 top-2 text-gray-300 text-sm focus:outline-none">
          <i id="eyeIcon" class="fas fa-eye"></i>
        </button>
      </div>

      <button type="submit" 
              class="w-full py-2 text-white font-semibold bg-cyan-500 hover:bg-cyan-600 rounded-md transition duration-300 ease-in-out">
        Login
      </button>
    </form>
  </div>

  <script>
    function togglePassword() {
      const pwd = document.getElementById('password');
      const icon = document.getElementById('eyeIcon');
      if (pwd.type === 'password') {
        pwd.type = 'text';
        icon.classList.replace('fa-eye', 'fa-eye-slash');
      } else {
        pwd.type = 'password';
        icon.classList.replace('fa-eye-slash', 'fa-eye');
      }
    }
  </script>
</body>
</html>
