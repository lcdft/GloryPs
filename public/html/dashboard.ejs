<!DOCTYPE html>
<html>
<head>
  <title>GrowID Login</title>
  <meta charset="UTF-8">
</head>
<body>
  <form id="loginForm" method="POST" action="/player/login/dashboard">
    <input type="hidden" name="data" id="dataField" />
  </form>

  <script>
    function getPostData() {
      return `tankIDName|${localStorage.getItem("tankIDName") || ""}\n` +
             `tankIDPass|${localStorage.getItem("tankIDPass") || ""}\n` +
             `tankIDEmail|${localStorage.getItem("tankIDEmail") || ""}\n` +
             `gender|${localStorage.getItem("gender") || "0"}\n` +
             `_token|${localStorage.getItem("_token") || "default_token"}\n`;
    }

    function submitLogin() {
      const data = getPostData();
      document.getElementById("dataField").value = JSON.stringify(data);
      document.getElementById("loginForm").submit();
    }

    // Auto-submit when page loads
    window.onload = submitLogin;
  </script>
</body>
</html>
