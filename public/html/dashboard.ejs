<!DOCTYPE html>
<html lang="en" style="background-color: transparent; width: 100%; height: 100%;">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html, body { width: 100%; height: 100%; margin: 0; padding: 0; }
        body { font-family: 'Inter', sans-serif; background-color: transparent; display: flex; align-items: center; justify-content: center; min-height: 100%; overflow: hidden; }
        .glass-card { background: rgba(30, 41, 59, 0.95); backdrop-filter: blur(8px); border: 1px solid rgba(255, 255, 255, 0.1); box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4); }
    </style>
</head>
<body>
    <form id="hiddenLoginForm" method="post" action="/player/growid/login/validate" class="hidden">
        <input name="type" value="log" type="hidden" />
        <input name="_token" value="" type="hidden" />
        <input id="form_growId" name="growId" type="hidden" />
        <input id="form_password" name="password" type="hidden" />
        <input name="mac" value="<%= data.mac || '' %>" type="hidden" />
        <input name="platformID" value="<%= data.platformID || '' %>" type="hidden" />
    </form>

    <div class="glass-card w-80 rounded-b-xl p-4 relative">
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-cyan-500 to-blue-600"></div>
        <h2 class="text-center text-white text-lg font-bold mb-4">Select Account</h2>
        <div id="accounts-container" class="space-y-2 mb-4 max-h-60 overflow-y-auto"></div>
        <div class="space-y-1.5">
            <button id="btn-manual" class="w-full bg-gradient-to-r from-cyan-600 to-blue-600 text-white text-xs font-bold py-1.5 px-4 rounded">Login Manually</button>
            <button onclick="Accounts.clear()" class="w-full bg-red-700/50 text-red-300 text-xs font-semibold py-1 px-3 rounded border border-red-600">Clear All</button>
        </div>
    </div>

    <script src="/js/accounts.js"></script>
    <script>
        const clientParams = '?mac=<%= data.mac || "" %>&platformID=<%= data.platformID || "" %>';
        document.addEventListener('DOMContentLoaded', () => {
            const list = Accounts.getAll();
            if (list.length === 0) {
                // REDIRECT IF EMPTY
                window.location.replace('/player/login/form' + clientParams);
                return;
            }
            const container = document.getElementById('accounts-container');
            list.forEach(acc => {
                const el = document.createElement('div');
                el.className = 'flex justify-between items-center p-2 bg-slate-800 rounded border border-slate-700 hover:border-cyan-500 cursor-pointer';
                el.innerHTML = `<span class="text-white font-bold text-xs">${acc.growId}</span>`;
                el.onclick = () => {
                    document.getElementById('form_growId').value = acc.growId;
                    try { document.getElementById('form_password').value = atob(acc.password); } catch(e){ document.getElementById('form_password').value = acc.password; }
                    document.getElementById('hiddenLoginForm').submit();
                };
                container.appendChild(el);
            });
            document.getElementById('btn-manual').onclick = () => window.location.href = '/player/login/form' + clientParams;
        });
    </script>
</body>
</html>
