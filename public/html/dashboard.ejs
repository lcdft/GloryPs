<!DOCTYPE html>
<html lang="en" style="background-color: transparent; width: 100%; height: 100%;">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Launcher Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
        /* --- RESET & BASE --- */
        html, body { width: 100%; height: 100%; margin: 0; padding: 0; overflow: hidden; }
        
        body { 
            font-family: 'Fredoka', sans-serif; 
            background-color: transparent; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
        }

        /* --- LAUNCHER CARD --- */
        .launcher-card {
            background: linear-gradient(180deg, rgba(30, 41, 59, 0.98) 0%, rgba(15, 23, 42, 0.98) 100%);
            border: 2px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5), inset 0 0 0 1px rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
        }

        /* --- COMPACT GROWTOPIA BOX STYLE --- */
        .gt-account-box {
            background-color: #ECD9B5; /* Classic GT Tan */
            border: 2px solid #6F4E37; /* Classic GT Brown */
            box-shadow: inset 1px 1px 0px rgba(255,255,255,0.3), inset -1px -1px 0px rgba(0,0,0,0.1), 0 2px 4px rgba(0,0,0,0.3);
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .gt-account-box:active {
            transform: scale(0.96);
            filter: brightness(0.9);
        }

        /* Scrollbar */
        .custom-scroll::-webkit-scrollbar { width: 4px; }
        .custom-scroll::-webkit-scrollbar-track { background: rgba(0,0,0,0.1); margin: 2px; }
        .custom-scroll::-webkit-scrollbar-thumb { background: #334155; border-radius: 4px; }
    </style>
</head>
<body>

    <form id="hiddenLoginForm" method="post" action="/player/growid/login/validate" class="hidden">
        <input name="type" value="log" type="hidden" />
        <input name="_token" value="{}" type="hidden" />
        <input id="form_growId" name="growId" type="hidden" />
        <input id="form_password" name="password" type="hidden" />
        <input name="mac" value="<%= data.mac || '' %>" type="hidden" />
        <input name="platformID" value="<%= data.platformID || '' %>" type="hidden" />
    </form>

    <div class="launcher-card w-[320px] rounded-xl overflow-hidden relative flex flex-col">
        
        <div class="p-3 text-center border-b border-white/5 bg-slate-800/50">
            <h1 class="text-lg font-semibold text-white tracking-wide drop-shadow-md">
                Select Profile
            </h1>
        </div>

        <div class="p-3 bg-slate-900/50 flex-1 min-h-[180px]">
            <div id="accounts-container" class="grid grid-cols-2 gap-2 max-h-[220px] overflow-y-auto custom-scroll pr-1">
                </div>
        </div>

        <div class="p-3 bg-slate-800/80 border-t border-white/5 space-y-2">
            <button id="btn-manual" class="w-full group flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 text-white text-xs font-semibold py-2 rounded-lg shadow-lg transition-all">
                <i class="fas fa-plus-circle text-blue-200"></i>
                <span>Login New</span>
            </button>
            
            <button onclick="Accounts.clear()" class="w-full text-[10px] text-slate-500 hover:text-red-400 font-medium py-0.5 transition-colors">
                Clear All
            </button>
        </div>
    </div>

    <script src="/js/accounts.js"></script>
    <script>
        const clientParams = '?mac=<%= data.mac || "" %>&platformID=<%= data.platformID || "" %>';
        
        document.addEventListener('DOMContentLoaded', () => {
            const list = Accounts.getAll();
            if (list.length === 0) {
                window.location.replace('/player/login/form' + clientParams);
                return;
            }

            const container = document.getElementById('accounts-container');
            
            list.forEach(acc => {
                const el = document.createElement('div');
                
                // --- COMPACT STYLING ---
                // h-20: Fixed height (smaller than before)
                // p-1.5: Reduced padding
                el.className = 'gt-account-box rounded-md p-1.5 flex flex-col items-center justify-center h-20 relative cursor-pointer group hover:brightness-110';
                
                el.innerHTML = `
                    <div onclick="event.stopPropagation(); Accounts.remove('${acc.growId}')" class="absolute top-0.5 right-0.5 opacity-0 group-hover:opacity-100 transition-opacity p-1 hover:bg-red-500/20 rounded">
                        <i class="fas fa-times text-[#6F4E37] text-[10px]"></i>
                    </div>

                    <div class="w-8 h-8 mb-1 transition-transform group-hover:scale-105 duration-200">
                        <img src="/html/p.png" alt="User" class="w-full h-full object-contain drop-shadow-sm">
                    </div>
                    
                    <div class="w-full text-center px-0.5">
                        <div class="text-[#4A2E19] font-bold text-xs uppercase truncate leading-tight drop-shadow-sm">
                            ${acc.growId}
                        </div>
                    </div>
                `;

                el.onclick = () => {
                    document.getElementById('form_growId').value = acc.growId;
                    try {
                        document.getElementById('form_password').value = atob(acc.password);
                    } catch(e) {
                        document.getElementById('form_password').value = acc.password;
                    }
                    document.getElementById('hiddenLoginForm').submit();
                };
                
                container.appendChild(el);
            });

            document.getElementById('btn-manual').onclick = () => window.location.href = '/player/login/form' + clientParams;
        });
    </script>
</body>
</html>